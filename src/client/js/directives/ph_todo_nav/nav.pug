nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ui-sref='home') Home
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav
        li.dropdown
          a.dropdown-toggle(
              data-toggle='dropdown'
              role='button'
              aria-haspopup='true'
              aria-expanded='false'
            )
            | View Todos
            span.caret
          ul.dropdown-menu
            li
              a(ui-sref='todos.landing')
                | All Todos
            li.divider(role='separator')
            li
              a(ui-sref="todos.by_status({status: 'new'})")
                | New Todos
            li
              a(ui-sref="todos.by_status({status: 'in_progress'})")
                | In Progress Todos
            li
              a(ui-sref="todos.by_status({status: 'complete'})")
                | Complete Todos
      form.navbar-form.navbar-right
        .form-group
          .input-group
            input.form-control(
              ng-model='nav_todo.text'
              placeholder='Add a new todo...'
              aria-describedby='nav_todo_input'
              )
            span.input-group-addon.btn.btn-success(
              id='nav_todo_input'
              ng-click='add_todo(nav_todo)') Add Todo
